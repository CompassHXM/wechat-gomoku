/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.game-title {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.title-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.game-intro {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 40rpx;
}

.start-game-btn {
  width: 500rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 auto 30rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

.online-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.local-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  box-shadow: 0 8rpx 20rpx rgba(245, 87, 108, 0.4);
}

.start-game-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 50rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
