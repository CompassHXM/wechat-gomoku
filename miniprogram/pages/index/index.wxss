/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.game-title {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.title-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.game-intro {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 40rpx;
}

.start-game-btn {
  width: 500rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 auto 30rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

.online-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.local-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  box-shadow: 0 8rpx 20rpx rgba(245, 87, 108, 0.4);
}

.start-game-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.usermotto {
  margin-top: 50rpx;
}

