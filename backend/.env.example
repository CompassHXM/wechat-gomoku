# Azure Cosmos DB配置
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-db-primary-key
COSMOS_DATABASE=wuziqi
COSMOS_CONTAINER=game_rooms

# Azure Web PubSub配置（用于实时通信）
PUBSUB_CONNECTION_STRING=Endpoint=https://your-pubsub.webpubsub.azure.com;AccessKey=your-access-key;Version=1.0;
PUBSUB_HUB_NAME=wuziqi

# 服务器配置
PORT=3000
NODE_ENV=production

# CORS配置（小程序域名）
ALLOWED_ORIGINS=https://servicewechat.com,https://your-domain.com
