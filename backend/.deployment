# Azure App Service 部署配置
kind: linux
type: app

# Node.js版本
runtimeStack: "NODE|18-lts"

# 启动命令
startupCommand: "npm start"

# 应用设置
appSettings:
  - name: NODE_ENV
    value: production
  - name: WEBSITE_NODE_DEFAULT_VERSION
    value: "18-lts"
  - name: SCM_DO_BUILD_DURING_DEPLOYMENT
    value: "true"
